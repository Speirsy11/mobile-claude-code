  "dependencies": {
    "@fastify/websocket": "^11.0.3",
    "@mcc/core": "workspace:*",
    "fastify": "^5.3.4"
  },
  "devDependencies": {
    "@mcc/eslint-config": "workspace:*",
    "@mcc/prettier-config": "workspace:*",
    "@mcc/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@types/ws": "^8.18.1",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "^4.20.3",
    "typescript": "catalog:"
  },
  "prettier": "@mcc/prettier-config"
}
